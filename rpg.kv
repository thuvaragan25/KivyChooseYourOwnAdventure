#menu screen
<MenuWindow>:
    name: "menu"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/background.png'

    BoxLayout: 
        orientation: "vertical"
        pos_hint: {'center_x': 0.5, 'center_y':0.15}
        size_hint: 0.25, 0.25


        spacing:10

        Button:
            text:"Start Journey"
            on_press: 
                app.root.current = "start"
            background_color: (123/255, 104/255, 238/255, 1) 	
            background_normal: ''

            Image:
                source: 'images/Escape.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y + 310
                size: 5000,5000
                
        Button:
            text:"Exit"
            on_press: app.stop() 
            background_color: (184/255, 15/255, 10/255, 1) 
            background_normal: ''
        



<StartWindow>
    name: "start"
    Label:
        text: "Would you like to begin the game?"

    Button:
        text: 'Yes'
        pos_hint: {'x': 0, 'y':0}
        size_hint: 0.497, 0.15
        background_color: (7/255, 95/255, 38/255, 1) 
        background_normal: ''
        on_press: 
            app.root.current = "intro"

    Button:
        text: 'No'
        pos_hint: {'x': 0.5, 'y':0}
        size_hint: 0.5, 0.15
        background_color: (184/255, 15/255, 10/255, 1) 
        background_normal: ''
        on_press: 
            app.root.current = "menu"


